<h1>Listing Song Entries</h1>
<p><%= link_to 'Andrew Sound Manager', controller: 'articles' %></p>
<p><%= link_to 'New Song Entry', new_article_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
		<th>Format</th>
		<th>Length</th>
		<th>Size</th>
  </tr>
 
  <% @articles.each do |articles| %>
    <tr>
      <td><%= articles.title %></td>
      <td><%= articles.artist %></td>
      <td><%= articles.format %></td>
      <td><%= articles.length %></td>
      <td><%= articles.size %></td>
      <td><%= link_to 'Show', article_path(articles) %></td>
      <td><%= link_to 'Edit', edit_article_path(articles) %></td>
      <td><%= link_to 'Destroy', article_path(articles),
                      method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
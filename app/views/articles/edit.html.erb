<h1>Editing Song Entry</h1>

<%= form_for :article, url: article_path(@articles), method: :patch do |f| %>
    <% if @articles.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@articles.errors.count, "error") %> prohibited
            this article from being saved:</h2>
          <ul>
            <% @articles.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :artist %><br>
      <%= f.text_area :artist %>
    </p>
    <p>
      <%= f.label :format %><br>
      <%= f.text_area :format %>
    </p>
    <p>
      <%= f.label :length %><br>
      <%= f.text_area :length %>
    </p>
    <p>
      <%= f.label :size %><br>
      <%= f.text_area :size %>
    </p>

    <p>
      <%= f.submit :'Update Song Entry' %>
    </p>
<% end %>

<%= link_to 'Back', articles_path %>
<%- model_class = Entry -%>
<div class="page-header">
  <h1>Song Entries</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= sortable "title" %></th>
    <th><%= sortable "artist" %></th>
    <th><%= sortable "format" %></th>
    <th><%= sortable "length" %></th>
    <th><%= sortable "size" %></th>
  </tr>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:artist) %></th>
      <th><%= model_class.human_attribute_name(:format) %></th>
      <th><%= model_class.human_attribute_name(:length) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th> -->
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <!-- <td><%= link_to entry.id, entry_path(entry) %></td> -->
        <td><%= entry.title %></td>
        <td><%= entry.artist %></td>
        <td><%= entry.format %></td>
        <td><%= entry.length %></td>
        <td><%= entry.size %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_entry_path(entry), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      entry_path(entry),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this song entry?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_entry_path,
            :class => 'btn btn-primary' %>
